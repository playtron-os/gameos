FROM registry.playtron.one/internal/playtronos:0.19.0.12

# Set OS version
COPY rootfs/usr/lib/os-release-playtron /usr/lib/

RUN dnf5 -y upgrade \
  gamescope-session-playtron \
  gamescope-session \
  legendary \
  mangohud \
  inputplumber \
  grid \
  playserve \
  playtron-os-files \
  reaper \
  tzupdate \
  udev-media-automount \
  valve-firmware \
  && ostree container commit

# View final packages.
RUN rpm -qa | sort
