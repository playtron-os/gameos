FROM registry.playtron.one/internal/playtronos:1.1.9.1

# Set OS version
COPY rootfs/usr/lib/os-release-playtron /usr/lib/

RUN dnf5 -y upgrade \
  SteamBus-1.26.5-1.fc41

# Clear cache.
RUN dnf5 clean all && \
  rm -r -f \
    /boot/.vmlinuz*.hmac \
    /var/cache/*

# View final packages.
RUN rpm -qa | sort

# View how well we adhere to bootc best practices.
RUN bootc container lint --no-truncate
